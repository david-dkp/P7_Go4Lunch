<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="drawerBackgroundColor">@color/orange_300</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Go4Lunch.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.Go4Lunch.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSecondary">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Go4Lunch.NavigationItem" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>